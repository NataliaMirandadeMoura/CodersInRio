@model List<Projeto.Presentation.Models.EstoqueConsultaViewModel>
@{
                /**/

                ViewBag.Title = "Consulta";
                Layout = "~/Views/Shared/Layout.cshtml";
}


<h4>Consulta de Estoques</h4>
Listagem de estoques cadastrados no sistema:
<br />
<br />

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome do Estoque</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.IdEstoque </td>
                <td> @item.Nome </td>
                <td>
                    <a href="" class="btn btn-primary btn-sm">Atualizar</a>
                    <a href="" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }


    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                Quantidade de estoques: @Model.Count
            </td>
        </tr>
    </tfoot>
</table>






